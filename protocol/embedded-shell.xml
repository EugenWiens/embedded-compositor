<?xml version="1.0" encoding="UTF-8"?>
<protocol name="embedded_shell">
    <copyright>
	FIXME
    </copyright>

  <interface name="embedded_shell_surface" version="1">
    <request name="destroy" type="destructor">
    </request>

    <request name="set_window_title">
        <arg name="window_title" type="string" />
    </request>

    <request name="set_minimized">
        <arg name="minimized" type="uint" />
    </request>
    <event name="minimize">
      <arg name="minimized" type="uint"/>
    </event>
  </interface>

  <interface name="embedded_shell" version="1">
    <request name="surface_create">
      <arg name="surface" type="object" interface="wl_surface"/>
	  <arg name="id" type="new_id" interface="embedded_shell_surface"/>
	  <arg name="anchor" type="uint" />
    </request>
    <enum name="error">
      <entry name="role" value="0" summary="wl_surface already has a different role"/>
    </enum>
  </interface>

  <enum name="anchor_border">
    <description summary="screen border anchor">
	Which screen border the surface will be anchored to
	</description>
	<entry name="undefined" value="0"/>
	<entry name="top" value="1"/>
	<entry name="bottom" value="2"/>
	<entry name="left" value="3"/>
	<entry name="right" value="4"/>
	<entry name="center" value="5"/>
  </enum>
</protocol>
